{% extends 'master.twig' %}

{% block content %}
	<div class="container full-height">
		<div class="mt-4 card">
			{% include 'widgets/errorMessages.twig' %}
			<h3 class="mt-4">Welcome back!</h3>
			<p class="lead">Don't have an account? <a href="/signup">Learn about MetaShort Pro</a><br>Forgot your login information? <a href="mailto:devalexwhite@gmail.com">Email support</a></p>
			<form id="formMembershipSignup" action="/login" method="POST" class="mt-4">
				<input type="hidden" name="action" value="login">
				<div class="form-group">
					<label for="emailAddress" class="mb-2">Email address</label>
					<input type="email" placeholder="me@company.com" name="emailAddress" class="form-control" id="inputEmailAddress"/>
				</div>
				<div class="form-group">
					<label class="mb-2" for="password">Password</label>
					<input type="password" placeholder="********" name="password" class="form-control" id="inputPassword"/>
				</div>
				<div class="form-group">
					<button class="btn btn-primary mt-4 w-100">
						Login
					</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}